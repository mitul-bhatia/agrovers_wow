# ============================================
# Agrovers Backend Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# API Keys (REQUIRED)
# ============================================
# Get Groq API key from: https://console.groq.com/keys
GROQ_LLM_API_KEY=your_groq_api_key_here
GROQ_STT_API_KEY=your_groq_api_key_here
GROQ_REPORT_API_KEY=your_groq_api_key_here

# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_REPORT_API_KEY=your_gemini_api_key_here

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8001

# ============================================
# LLM Configuration
# ============================================
LLM_PROVIDER=groq
GROQ_LLM_MODEL=llama-3.3-70b-versatile
OLLAMA_MODEL_NAME=gemma2:9b

# ============================================
# RAG Configuration
# ============================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
FAISS_INDEX_PATH=data/faiss_index.bin
KNOWLEDGE_BASE_PATH=data/knowledge_base.json

# ============================================
# Audio Configuration
# ============================================
AUDIO_DIR=audio
MAX_AUDIO_SIZE_MB=10

# ============================================
# API Configuration
# ============================================
# Base URL for API (used for audio URLs)
# For local: http://localhost:8001
# For production: https://your-backend.onrender.com
API_BASE_URL=http://localhost:8001

# ============================================
# CORS Configuration (for production)
# ============================================
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5174,http://localhost:5173,http://localhost:3000

# ============================================
# Optional: Production Settings
# ============================================
# LOG_LEVEL=INFO
# SENTRY_DSN=your_sentry_dsn_here
# REDIS_URL=redis://localhost:6379/0
